# Database (PostgreSQL)
POSTGRES_USER=matrimony
POSTGRES_PASSWORD=matrimony
POSTGRES_DB=matrimony
POSTGRES_PORT=5433
DATABASE_URL=postgresql://matrimony:matrimony@localhost:5433/matrimony

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# API
API_PORT=3001
PORT=3001
# Set SWAGGER_ENABLED=false to disable Swagger UI and OpenAPI spec in production
# SWAGGER_ENABLED=false

# Web (Next.js)
WEB_PORT=3000
# Base API URL used by frontend. Supports both values:
# - http://localhost:3001
# - https://your-domain.com/api
# Do not include a trailing slash.
NEXT_PUBLIC_API_URL=http://localhost:3001
WEB_BASE_URL=http://localhost:3000

# JWT (set in production)
# Keep these stable across deploys, otherwise users get logged out.
JWT_ACCESS_SECRET=change-me-to-a-strong-stable-secret
JWT_REFRESH_SECRET=change-me-to-a-strong-stable-secret

# Optional: Seed script (super admin + 500 test users + demo user for video). No leading spaces on variable names.
# SUPER_ADMIN_EMAIL=admin@myswayamvar.local
# SUPER_ADMIN_PASSWORD=SuperAdmin123!
# DEMO_USER_EMAIL=demo@myswayamvar.local
# DEMO_USER_PASSWORD=DemoUser123!
# SEED_RANDOM=42
# CLEANUP_INCLUDE_SUPER_ADMIN=true  (only for db:seed:cleanup)

# Optional: Stripe (Premium)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

